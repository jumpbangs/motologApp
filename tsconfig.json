{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "store/*": ["./app/store/*"],
      "utils/*": ["./app/utils/*"],
      "theme/*": ["./app/theme/*"],
      "types/*": ["./app/types/*"],
      "services/*": ["./app/services/*"],
      "components/*": ["./app/components/*"],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
